{
    "name": "personal-career-blog",
    "description": "A theme for ghost.js to host a career boosting blog with resume and thinks a indiviual could love.",
    "demo": "https://www.kellner-digital.com",
    "private" : true,
    "version": "1.0.0",
    "engines": {
        "ghost": ">=5.0.0"
    },
    "license": "MIT",
    "scripts": {
        "dev": "gulp",
        "zip": "gulp zip",
        "test": "gscan .",
        "test:ci": "gscan --fatal --verbose .",
        "pretest": "gulp build"
    },
    "author": {
        "name": "Mario Kellner",
        "email": "mario@kellner-digital.com",
        "url": "https://www.kellner-digital.com/"
    },

    "keywords": [
        "ghost",
        "theme",
        "ghost-theme",
        "personal-blog",
        "resumee",
        "vcard"
    ],
    "devDependencies": {
        "@tryghost/release-utils": "0.8.1",
        "autoprefixer": "10.4.7",
        "beeper": "2.1.0",
        "cssnano": "5.1.12",
        "gscan": "4.34.0",
        "gulp": "4.0.2",
        "gulp-concat": "2.6.1",
        "gulp-livereload": "4.0.2",
        "gulp-postcss": "9.0.1",
        "gulp-uglify": "3.0.2",
        "gulp-zip": "5.1.0",
        "inquirer": "8.2.4",
        "postcss": "8.2.13",
        "postcss-color-mod-function": "3.0.3",
        "postcss-easy-import": "4.0.0",
        "pump": "3.0.0",
        "@tryghost/shared-theme-assets": "2.0.1"
    },
    "config": {
        "posts_per_page": 25,
        "card_assets": true,
        "image_sizes": {
            "xxs": {
                "width": 30
            },
            "xs": {
                "width": 100
            },
            "s": {
                "width": 300
            },
            "m": {
                "width": 600
            },
            "l": {
                "width": 1000
            },
            "xl": {
                "width": 2000
            }
        },
        "custom": {
            "secondary_color": {
                "type": "color",
                "default": "#15171a"
            },

            "github_link": {
                "type": "text"
            },
            
            "xing_link": {
                "type": "text"
            },
            "linkedin_link": {
                "type": "text"
            },
            "hero_image": {
                "type": "image",
                "group": "homepage"
            },
            
            "color_scheme": {
                "type": "select",
                "options": [
                    "Light",
                    "Dark",
                    "Auto"
                ],
                "default": "Light"
            }
        }
    }
}
