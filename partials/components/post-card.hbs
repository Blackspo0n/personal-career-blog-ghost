{{#if feature_image}}
{{~#contentFor "preload"~}}
<link rel="preload" as="image" imagesrcset="{{img_url feature_image size="s"}} 300w, {{img_url feature_image size="m"}} 600w" href="{{img_url feature_image size="s"}}" imagesizes="50vw" />
{{~/contentFor~}}
{{/if}}
<article class="gh-card post-card{{#if vertical}} vertical{{/if}} {{post_class}} {{#if showExcerp}}{{else}}small{{/if}}">
<div class="gh-card-image-content post-card-header">
    <a class="gh-card-link post-card-link" href="{{url}}">
        <figure class="gh-card-image">
            {{^if vertical}}<div class="aspect-ratio aspect-ratio-lengthy">{{/if}}
            {{#if feature_image}}
                <img class="{{^if vertical}}aspect-ratio-in{{/if}}"
                    srcset="{{img_url feature_image size="s"}} 300w, {{img_url feature_image size="m"}} 600w"
                    src="{{img_url feature_image size="m"}}"
                    alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" sizes="50vw" />
            {{else}}
                <div class="aspect-ratio-in gh-gardient-btn" style="background-color: var(--color-secondary);"></div>
            {{/if}}
            
            {{^if vertical}}</div>{{/if}}        
        </figure>
    </a>
    <div class="gh-header-tags">
    {{#foreach tags limit=3}}
        <a href="{{url}}" class="tag {{id}}">{{name}}</a>
    {{/foreach}}
    </div>
</div>
<main class="gh-card-content">
    <h2 class="gh-card-header"><a class="gh-card-link post-card-link" href="{{url}}">{{title}}</a></h2>    
    <div class="gh-card-meta">
        {{#if showExcerp}}  
        <div class="read-time"><i class="las la-clock"></i> {{reading_time minute=(t "1 min read") minutes=(t "% min read")}}</div>
        {{/if}}
        <time class="gh-card-date" datetime="{{date format="YYYY-MM-DD"}}"><i class="las la-calendar"></i> {{date}}</time>
    </div>
    {{#if showExcerp}}    
    <div class="gh-card-text">{{excerpt}}</div>
    {{#if vertical}}
    <a class="gh-card-link post-card-link" href="{{url}}">
        <footer class="gh-card-footer">
            {{t "Read more"}}
        </footer>
    </a>
    {{/if}}
    {{/if}}
</main>
{{#if showExcerp}}
{{^if vertical}}
<a class="gh-card-link post-card-link" href="{{url}}">
<footer class="gh-card-footer">
    {{t "Read more"}}
</footer>    
</a>
{{/if}}
{{/if}}
</article>